@model IEnumerable<Core.Order>

<div class="container p-3">
    <br/><br/>
    <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
            <tr>
                <th>
                    Номер заказа
                </th>
                <th>
                    Город получателя
                </th>
                <th>
                    Адрес получателя
                </th>
                <th>
                    Город отправителя
                </th>
                <th>
                    Адрес отправителя
                </th>
                <th>
                    Вес заказа
                </th>
                <th>
                    Дата выдачи заказа
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="10%">@obj.OrderId</td>
                    <td width="10%">@obj.CityReceiver</td>
                    <td width="20%">@obj.AddressReceiver</td>
                    <td width="10%">@obj.CitySender</td>
                    <td width="20%">@obj.AddressSender</td>
                    <td width="10%">@obj.Weight</td>
                    <td width="20%">@obj.DateTakeCargo.ToShortDateString()</td>
                </tr>
            }
            </tbody>
        </table>
</div>
